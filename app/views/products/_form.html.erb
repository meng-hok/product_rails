<%= form_for(@product) do |f| %>
<p>
    <%= f.label :name  %>
    <%= f.text_area :name , autofocus:true  %>
  </p>  
  <p>
    <%= f.label :description  %>
    <%= f.text_area :description  %>
  </p>  
    <p>
    <%= f.label :rating  %>
    <%= f.text_field :rating  %>
  </p>  
    <p>
    <%= f.label :price  %>
    <%= f.text_field :price  %>
  </p> 
   <p>
    <%= f.label :imported_on  %>
    <%= f.date_field :imported_on  %>
  </p>  
   <%= f.submit %>
<% end %>